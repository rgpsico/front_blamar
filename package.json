    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "vue": "^2.6.14",
    "vuetify": "^2.6.14"
  },

  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",

    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",

    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "vue-template-compiler": "^2.6.14"
  },

  "build": {
    "appId": "com.blumar.erp",
    "productName": "Blumar ERP",
